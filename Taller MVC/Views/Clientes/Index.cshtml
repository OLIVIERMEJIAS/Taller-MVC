@model IEnumerable<Cliente>
@{
    ViewData["Title"] = "Clientes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Lista de Clientes</h1>

<div class="container">
    <div class="card-header">
        <h2> Datos Generales</h2>
    </div>
    <div class="row mt-3">
        @if (Model.Count() > 0)
            {
                <table class="table table-striped">>
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(c => c.Id)</th>
                            <th>@Html.DisplayNameFor(c => c.Nombre)</th>
                            <th>@Html.DisplayNameFor(c => c.Ape1)</th>
                            <th>@Html.DisplayNameFor(c => c.Ape2)</th>
                            <th>@Html.DisplayNameFor(c => c.Cedula)</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var c in Model)
                        {
                        <tr>
                            <td>@c.Id</td>
                            <td>@c.Nombre</td>
                            <td>@c.Ape1</td>
                            <td>@c.Ape2</td>
                            <td>@c.Cedula</td>
                            <td>
                                <a asp-controller="Cliente"
                                   asp-action="Edit"
                                   asp-route-id="@c.Id">Modificar</a>

                                <a asp-controller="Cliente"
                                   asp-action="Delete"
                                   asp-route-id="@c.Id">Eliminar</a>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
        }
        else
            {
                <p>No hay Clientes en la base de Datos!!!</p>
            }
    </div>
</div>

